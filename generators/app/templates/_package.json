{
  "name": "<%= projectName %>",
  "version": "0.1.0",
  "description": "A new Node.js project",
  "scripts": {
    "build": "<% if (language === 'ts') { %>tsc<% } else { %>echo 'No build step for JS'<% } %>",
    "lint": "eslint . --ext .<%= language === 'ts' ? 'ts' : 'js' %>",
    "lint:fix": "eslint . --ext .<%= language === 'ts' ? 'ts' : 'js' %> --fix",
    "format": "prettier --write .",
    "test": "jest --coverage",
    "type-check": "<% if (language === 'ts') { %>tsc --noEmit<% } else { %>echo 'No type-check for JS'<% } %>"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^2.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0"<% if (language === 'ts') { %>,
    "typescript": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "ts-jest": "^29.0.0"<% } %>
  }
}
