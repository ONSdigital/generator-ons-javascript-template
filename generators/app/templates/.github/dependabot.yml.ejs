---
# Config for Dependabot updates. See Documentation here:
# https://docs.github.com/en/code-security/dependabot/dependabot-version-updates/configuration-options-for-the-dependabot.yml-file

version: 2
updates:
  # Update GitHub actions in workflows
  - package-ecosystem: github-actions
    directory: /
    # Every week
    schedule:
      interval: weekly

    groups:
      # Group updates into fewer pull requests
      gh-security-updates:
        applies-to: security-updates
        patterns:
          - "*"

      gh-version-updates:
        applies-to: version-updates
        patterns:
          - "*"

  # Enable Security updates for JavaScript package manager
  - package-ecosystem: npm

    # When set to 0, version updates are disabled.
    open-pull-requests-limit: <%= open_pr_limit || 10 %>

    # Look for a package.json/package-lock.json in the root directory
    directory: /
    # Every weekday
    schedule:
      interval: daily

    groups:
      # Group updates into fewer pull requests
      js-security-updates:
        applies-to: security-updates
        patterns:
          - "*"

      js-version-updates:
        applies-to: version-updates
        patterns:
          - "*"